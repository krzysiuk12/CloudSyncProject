<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="jacksonObjectMapper" primary="true" class="pl.edu.agh.iosr.config.MyObjectMapperFactory" factory-method="createWithJodaModule"/>

    <context:component-scan base-package="pl.edu.agh.iosr.repository" />
    <context:component-scan base-package="pl.edu.agh.iosr.cloud.dropbox.configuration" />
    <context:component-scan base-package="pl.edu.agh.iosr.cloud.dropbox.services" />
    <context:component-scan base-package="pl.edu.agh.iosr.cloud.googledrive.configuration" />
    <context:component-scan base-package="pl.edu.agh.iosr.cloud.googledrive.services" />
    <context:component-scan base-package="pl.edu.agh.iosr.cloud.onedrive.services" />
    <context:component-scan base-package="pl.edu.agh.iosr.execution" />
    <context:component-scan base-package="pl.edu.agh.iosr.synchronization" />

    <bean id="client" class="com.sun.jersey.api.client.Client"/>

</beans>