    <bean id="onedriveConfig" class="pl.edu.agh.iosr.cloud.common.CloudConfiguration">
        <constructor-arg name="appKey" value="000000004015302A"/>
        <constructor-arg name="appKeySecret" value="3nbUeQnDqrFLSZwPKpjLBrYubFelq7TL"/>
        <constructor-arg name="appName" value="burak"/>
